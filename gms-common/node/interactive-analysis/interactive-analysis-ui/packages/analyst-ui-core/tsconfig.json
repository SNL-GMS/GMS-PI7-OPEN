{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "outDir": "build/js",
    "declaration": true,
    "declarationDir": "./build/types",
    "allowJs": false,
    "removeComments": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noImplicitThis": false,
    "suppressImplicitAnyIndexErrors": true,
    "noFallthroughCasesInSwitch": true,
    "strictNullChecks": false,
    "noUnusedLocals": true,
    "pretty": true,
    "moduleResolution": "node",
    "typeRoots": [
      "@types",
      "./@types",
      "./node_modules/@types"
    ],
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "~css/*": ["src/css/*"],
      "~apollo": ["src/ts/apollo"],
      "~apollo/": ["src/ts/apollo"],
      "~apollo/*": ["src/ts/apollo/*"],
      "~config": ["src/ts/config"],
      "~config/": ["src/ts/config"],
      "~config/*": ["src/ts/config/*"],
      "~graphql": ["src/ts/graphql"],
      "~graphql/": ["src/ts/graphql"],
      "~graphql/*": ["src/ts/graphql/*"],
      "~resources": ["src/ts/resources"],
      "~resources/": ["src/ts/resources"],
      "~resources/*": ["src/ts/resources/*"],
      "~state": ["src/ts/state"],
      "~state/": ["src/ts/state"],
      "~state/*": ["src/ts/state/*"],
      "~util": ["src/ts/util"],
      "~util/": ["src/ts/util"],
      "~util/*": ["src/ts/util/*"],
      "~analyst-ui": ["src/ts/workspaces/analyst-ui"],
      "~analyst-ui/": ["src/ts/workspaces/analyst-ui"],
      "~analyst-ui/*": ["src/ts/workspaces/analyst-ui/*"],
      "~data-acquisition-ui": ["src/ts/workspaces/data-acquisition-ui"],
      "~data-acquisition-ui/": ["src/ts/workspaces/data-acquisition-ui"],
      "~data-acquisition-ui/*": ["src/ts/workspaces/data-acquisition-ui/*"],
    }
  },
  "include": [
    "./**/*",
  ],
  "exclude": [
    ".vscode",
    "build",
    "config",
    "coverage",
    "dist",
    "docs",
    "nginx",
    "node_modules",
    "resources",    
  ]
}