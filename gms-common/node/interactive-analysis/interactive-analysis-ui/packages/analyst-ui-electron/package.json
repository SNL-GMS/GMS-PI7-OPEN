{
  "name": "@gms/analyst-ui-electron",
  "productName": "GMS Interactive Analysis",
  "author": "GMS Development Team",
  "version": "0.1.0",
  "description": "Electron window management for GMS analyst UI",
  "license": "UNLICENSED",
  "main": "./build/analyst-ui-electron.js",
  "scripts": {
    "lint": "tslint --project ./tsconfig.json --config ./tslint.json 'src/**/*.{ts,tsx}' --fix",
    "precommit": "lint-staged",
    "clean": "rm -rf ./build/* && rm -rf ./build/*",
    "build": "npm run clean && npm run lint && webpack --colors --progress --env production --config webpack.config.js && tsc",
    "test": "jest --config jest.config.js",
    "sonar": "echo \"run 'npm run sonar' from the top-level directory\"",
    "watch": "tsc --watch",
    "dev": "webpack --colors --progress --env development && tsc && electron .",
    "prod": "webpack --colors --progress --env production && tsc && electron .",
    "start": "npm run prod",
    "generate-bin": "npm run build && npm run generate-darwin-x64 && npm run generate-win32-x64",
    "generate-darwin-x64": "electron-packager . --platform=darwin --arch=x64 --icon=gms-logo.icns --out dist --no-package-manager",
    "generate-win32-x64": "electron-packager . --platform=win32 --arch=x64 --icon=gms-logo.ico --out dist --no-package-manager",
    "docs": "typedoc --out docs ./src/ --name analyst-ui-electron --mode file --readme README.md --target ES6 --includeDeclarations --excludeExternals --excludeNotExported --hideGenerator"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,css,scss}": [
      "prettier --config ./.prettierrc --write",
      "git add"
    ],
    "__tests__/**/*.{js,jsx,ts,tsx,css,scss}": [
      "prettier --config ./.prettierrc --write",
      "git add"
    ],
    "__mocks__/**/*.{js,jsx,ts,tsx,css,scss}": [
      "prettier --config ./.prettierrc --write",
      "git add"
    ]
  },
  "dependencies": {},
  "devDependencies": {
    "@gms/analyst-ui-core": "0.1.0",
    "@types/enzyme": "3.1.14",
    "@types/faker": "4.1.4",
    "@types/jest": "23.3.3",
    "@types/lodash": "4.14.107",
    "@types/react": "16.4.18",
    "@types/react-dom": "16.0.9",
    "case-sensitive-paths-webpack-plugin": "2.1.2",
    "electron": "3.0.5",
    "electron-context-menu": "0.10.0",
    "electron-json-storage": "4.1.4",
    "electron-packager": "12.2.0",
    "enzyme": "3.6.0",
    "enzyme-adapter-react-16": "1.6.0",
    "enzyme-to-json": "3.3.4",
    "faker": "4.1.0",
    "highlight.js": "9.13.1",
    "jest": "23.6.0",
    "jest-canvas-mock": "1.1.0",
    "jest-cli": "23.6.0",
    "jsdom": "11.8.0",
    "jsdom-global": "3.0.2",
    "redux-electron-store": "0.6.3",
    "fork-ts-checker-webpack-plugin": "0.4.1",
    "lint-staged": "7.0.5",
    "lodash": "4.17.10",
    "mocha": "5.1.1",
    "prettier": "1.12.1",
    "react": "16.6.3",
    "react-dom": "16.6.3",
    "redux": "4.0.1",
    "spectron": "3.8.0",
    "ts-jest": "23.10.3",
    "ts-loader": "4.2.0",
    "tslint": "5.10.0",
    "tslint-eslint-rules": "5.1.0",
    "tslint-language-service": "0.9.9",
    "tslint-config-prettier": "1.12.0",
    "tslint-react": "3.6.0",
    "typedoc": "0.14.2",
    "typescript": "3.1.1",
    "uglifyjs-webpack-plugin": "1.2.5",
    "webpack": "4.8.1",
    "webpack-cli": "2.1.3",
    "webpack-merge": "4.1.2"
  }
}
